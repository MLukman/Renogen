{% extends "renobase.twig" %}

{% block content %}
	{% set is_existing = (deployment.id|default(null) is not empty) %}
	<h1 class="ui header">{% if is_existing %}Edit{% else %}Create{% endif %} deployment</h1>

	<form method="POST">
		<div class="ui form">
			<div class="ui required field basic segment">
				<label class="ui top attached large label">Name</label>
				<input placeholder="Deployment name (max 16 alphanumeric and underscore characters only)" type="text" name="name" value="{{app.request.request.get('name')|default(deployment.name|default(null))}}" />
				{{ m.fieldError(errors|default([]), 'name') }}
			</div>
			<div class="ui required field basic segment">
				<label class="ui top attached large label">Title</label>
				<input placeholder="User friendly deployment title (max 100 characters)" type="text" name="title" value="{{app.request.request.get('title')|default(deployment.title|default(null))}}" />
				{{ m.fieldError(errors|default([]), 'title') }}
			</div>
			<div class="ui required field basic segment">
				<label class="ui top attached large label">Deployment Date</label>
				{{ m.dateField('execute_date','execute_date',(deployment.execute_date|default(false) ? deployment.execute_date|date('d/m/Y') : null),'Deployment date') }}
				{{ m.fieldError(errors|default([]), 'execute_date') }}
			</div>
			<div class="ui field">
				<input type="submit" class="ui submit primary button" name="_action" value="{% if is_existing %}Save{% else %}Create{% endif %} deployment" />
				<a href="{{cancel_path|default('javascript:window.history.go(-1)')}}" class="ui secondary button">Cancel</a>
				{% if is_existing %}
					<input type="submit" class="ui red right floated button" name="_action" value="Delete"
						   onclick="return confirm('Are you sure you want to delete?')" />
				{% endif %}
			</div>
		</div>
	</form>
{% endblock %}