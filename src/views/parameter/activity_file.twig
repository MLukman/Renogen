{% set paramval = parameter.activityDatabaseToForm(template.parameters,activity.parameters|default([]),param,activity) %} 
<input id="parameters-{{param}}" type="file" name="parameters[{{param}}]" />
{% if paramval|default(null) %}
    <p>Existing file: <strong>{{paramval.filename}}</strong> of type <strong>{{paramval.mime_type}}</strong> with size <strong>{{paramval.filesize}}</strong> bytes</p>
    {% if not parameter.activityRequired %}
        <input type="checkbox" name="parameters[{{param}}_delete]" value="1" />
    {% endif %}
{% endif %}
{{ m.fieldError(errors|default([]), 'parameters.' ~ param) }}
