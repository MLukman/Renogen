{% extends "plugin_base.twig" %}

{% block pluginView %}
    <h2>Available Plugins</h2>
    <div class="ui stackable cards divided list">
        {% for p in pluginClasses %}
            <a class="ui red card" href="{{app.entity_path('plugin_'~p.name~'_configure', project)}}">
                <div class="content">
                    <div class="ui header">
                        <h3><i class="ui {{p.icon}} icon"></i> {{p.name}}</h3>
                    </div>
                    <div class="description">{{p.title}}</div>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}
