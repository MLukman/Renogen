<table class="ui striped very compact table">
    <thead>
        <tr>
            <th>#</th>
            <th>Project</th>
            <th>Job</th>
            <th>Options</th>
            <th>Remark</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {% for row in data %}
            <tr>
                <td class="top aligned collapsing">
                    <a name="{{row.runitem.id}}">&nbsp;</a>{{loop.index}}
                </td>
                <td class="top aligned">{{row.params.project}}</td>
                <td class="top aligned">
                    {% if row.params.group %}<small>{{row.params.group}} &raquo;</small><br />{% endif %}
                    <strong>{{row.params.job}}</strong>
                </td>
                <td class="top aligned">
                    {% if row.params.options %}
                        {{ r.prettyDisplay(row.params.options) }}
                    {% else %}
                        Not required
                    {% endif %}
                </td>
                <td class="top aligned">
                    {{ r.prettyDisplay(row.params.remark) }}
                </td>
                <td class="top aligned collapsing">
                    {{ r.runItemStatusControl(row.runitem) }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

