{% extends "renobase.twig" %}
{% import "activity_form.twig" as actform %}

{% block content %}
    <h1 class="ui dividing header">
        <div>
            <small>
                {{r.crumb_project(template.project, true)}} &raquo;
                <i class="ui clipboard icon"></i><a href="{{app.entity_path('template_list',template.project)}}">Activity Templates</a> &raquo;
            </small>
        </div>
        <span><i class="ui copy icon"></i>{{template.title}}</span>
        <a class="ui right floated button" href="{{app.entity_path('template_edit',template)}}"><i class="ui pencil icon"></i>Edit</a>
    </h1>


    <h2>Sample Activity Create/Edit Form</h2>

    <div class="ui form segment">
        {{ actform.activityConfigForm(template) }}
    </div>

    <p>&nbsp;</p>
    {{ r.timestamps(template) }}
{% endblock %}